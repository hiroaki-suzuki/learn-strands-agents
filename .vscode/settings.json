{
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/app/.venv/bin/python",
    "python.languageServer": "None",
    "ruff.path": [
        "${workspaceFolder}/app/.venv/bin/ruff"
    ],
    "ruff.configuration": "${workspaceFolder}/app/ruff.toml",
    "ty.path": [
        "${workspaceFolder}/app/.venv/bin/ty"
    ],
    "ty.configurationFile": "${workspaceFolder}/app/ty.toml",
    "cSpell.words": [
        "charliermarsh",
        "codezombiech",
        "debugpy",
        "eamodio",
        "fastmcp",
        "geminicodeassist",
        "genai",
        "httpx",
        "Meteo",
        "mhutchie",
        "njpwerner",
        "precip",
        "pyproject",
        "shellautocompletion",
        "tamasfe",
        "trixie",
        "tyriar",
        "wayou",
        "yzhang"
    ],
}